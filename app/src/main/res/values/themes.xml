<resources>
    <!-- Base application theme. -->
    <style name="Theme.EduMan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/status_bar_background</item>
        <item name="android:windowLightStatusBar">@bool/is_light_status_bar</item>

        <item name="actionOverflowButtonStyle">@style/ActionBarOverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/ActionBarOverflowMenuStyle</item>

        <!-- <item name="actionModeCloseButtonStyle"></item> -->
    </style>

    <!-- Style of the Overflow-Button in the ToolBar -->
    <style name="ActionBarOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/icon_dark</item>
        <item name="android:src">@drawable/icon_overflow_menu</item>
    </style>

    <style name="ActionBarOverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:popupBackground">@drawable/background_action_bar_overflow_menu</item>
    </style>

    <style name="DefaultCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@drawable/button_background</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="DefaultExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="BaseTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_field_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_field_corner_radius</item>
    </style>

    <style name="DefaultTextField" parent="BaseTextField">
        <item name="boxStrokeColor">@drawable/text_field_stroke_color</item>
    </style>

    <style name="DialogTextField" parent="BaseTextField">
        <item name="boxStrokeColor">@drawable/text_field_stroke_color_dialog</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextAppearanceActionBarTitle">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_app_bar_title</item>
    </style>

    <style name="TextAppearanceActionBarSubTitle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_app_bar_subtitle</item>
    </style>

    <style name="DefaultSwitchStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

</resources>