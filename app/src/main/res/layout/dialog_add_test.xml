<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_bottom_sheet_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        android:text="@string/add_test"
        android:textColor="@color/text"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/default_margin">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialogAddTestTextFieldTopic"
            style="@style/DialogTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/topic">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialogAddTestTextFieldDate"
            style="@style/DialogTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin"
            android:hint="@string/date"
            app:startIconDrawable="@drawable/icon_calendar">

            <com.google.android.material.textfield.TextInputEditText
                android:enabled="false"
                android:textColor="@drawable/text_color_text_field_with_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="date" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialogAddTestTextFieldTime"
            style="@style/DialogTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_small_margin"
            android:hint="@string/time"
            app:startIconDrawable="@drawable/icon_clock">

            <com.google.android.material.textfield.TextInputEditText
                android:enabled="false"
                android:textColor="@drawable/text_color_text_field_with_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="time" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogAddTestButtonSave"
            style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:enabled="false"
            android:text="@string/save"
            app:icon="@drawable/icon_save" />

    </LinearLayout>

</LinearLayout>