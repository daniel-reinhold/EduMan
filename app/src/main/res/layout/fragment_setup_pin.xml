<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragmentSetupPinCardDigit1"
                style="@style/DefaultCard"
                android:layout_width="match_parent"
                android:layout_height="85dp">

                <EditText
                    android:id="@+id/fragmentSetupPinDigit1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:hint="@string/hint_pin"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="64sp" />

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/fragmentSetupPinButtonClearDigit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small_margin"
                android:background="@drawable/background_button_clear_pin_field"
                android:paddingVertical="4dp"
                android:src="@drawable/icon_close"
                android:visibility="gone"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragmentSetupPinCardDigit2"
                style="@style/DefaultCard"
                android:layout_width="match_parent"
                android:layout_height="85dp">

                <EditText
                    android:id="@+id/fragmentSetupPinDigit2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:hint="@string/hint_pin"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="64sp" />

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/fragmentSetupPinButtonClearDigit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small_margin"
                android:background="@drawable/background_button_clear_pin_field"
                android:paddingVertical="4dp"
                android:src="@drawable/icon_close"
                android:visibility="gone"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragmentSetupPinCardDigit3"
                style="@style/DefaultCard"
                android:layout_width="match_parent"
                android:layout_height="85dp">

                <EditText
                    android:id="@+id/fragmentSetupPinDigit3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:hint="@string/hint_pin"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="64sp" />

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/fragmentSetupPinButtonClearDigit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small_margin"
                android:background="@drawable/background_button_clear_pin_field"
                android:paddingVertical="4dp"
                android:src="@drawable/icon_close"
                android:visibility="gone"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fragmentSetupPinCardDigit4"
                style="@style/DefaultCard"
                android:layout_width="match_parent"
                android:layout_height="85dp">

                <EditText
                    android:id="@+id/fragmentSetupPinDigit4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:hint="@string/hint_pin"
                    android:inputType="number"
                    android:maxLength="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="64sp" />

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/fragmentSetupPinButtonClearDigit4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small_margin"
                android:background="@drawable/background_button_clear_pin_field"
                android:paddingVertical="4dp"
                android:src="@drawable/icon_close"
                android:visibility="gone"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/large_margin"
        android:layout_marginTop="@dimen/extra_small_margin"
        android:text="@string/data_saved_only_local"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/background_separator" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_margin"
            android:text="@string/or"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="italic" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@drawable/background_separator" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragmentSetupPinButtonSkip"
        style="@style/DefaultButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:text="@string/skip"
        app:icon="@drawable/icon_close" />

</LinearLayout>